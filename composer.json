{
	"name": "peroks/api-server",
	"description": "An ultra-light api server based on PSR-7, PSR-14 and PSR-15 best-practice standards.",
	"type": "library",
	"minimum-stability": "stable",
	"version": "0.5.0",
	"license": "MIT",
	"keywords": [
		"PSR-7",
		"PSR-14",
		"PSR-15",
		"http-server-middleware",
		"http-server-handler",
		"event-dispatcher",
		"middleware",
		"request-handler",
		"api-server",
		"json-server"
	],
	"authors": [
		{
			"name": "Per Egil Roksvaag",
			"homepage": "https://github.com/peroks"
		}
	],
	"autoload": {
		"psr-4": {
			"Peroks\\ApiServer\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Peroks\\ApiServer\\Tests\\": "tests/"
		}
	},
	"require": {
		"peroks/model": "^1.0",
		"php": "^8.1",
		"psr/http-server-middleware": "^1.0",
		"psr/http-server-handler": "^1.0",
		"psr/event-dispatcher": "^1.0"
	},
	"require-dev": {
		"guzzlehttp/psr7": "^2.5",
		"phpunit/phpunit": "^10"
	},
	"provide": {
		"psr/http-server-handler-implementation": "1.0",
		"psr/http-server-middleware-implementation": "1.0"
	},
	"scripts": {
		"tests": "./vendor/bin/phpunit tests"
	}
}
